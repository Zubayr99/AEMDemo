<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="News Card"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[aemtraining.components.newscard.editor]">
    <content
        granite:class="cmp-author_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <topic
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Topic"
                        name="./topic"
                        useFixedInlineToolbar="{Boolean}true"/>
                    <article
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Article"
                        name="./article"
                        required="{Boolean}false"
                        useFixedInlineToolbar="{Boolean}true"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Link"
                        name="./link"/>
                    <pubDate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="/libs/granite/ui/components/coral/foundation/form/datepicker"
                            type="date"
                            fieldLabel="Published Date"
                            name="./pubDate"
                            useFixedInlineToolbar="{Boolean}true"/>
                    <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            class="field-whitespace"
                            fieldDescription="Image link"
                            fieldLabel="External Link"
                            name="./image"/>

                </items>
            </column>
        </items>
    </content>
</jcr:root>
